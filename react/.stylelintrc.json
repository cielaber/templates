{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "forward"]
      }
    ],
    "no-descending-specificity": null,
    "no-duplicate-selectors": null,
    "no-invalid-double-slash-comments": null
  }
}
